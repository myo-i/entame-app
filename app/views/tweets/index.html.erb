<%= render "shared/header" %>
<div class='bg-light pb-5 pt-2'>
  <div class="input-group d-flex justify-content-center">
    <%= form_with(url: search_idea_tweets_path, local: true, method: :get, class: "input-group w-50 mb-0") do |form| %>
      <%= form.text_field :keyword, placeholder: "タイトル名で検索する", class: "form-control" %>
      <%= form.submit "検索", class: "input-group-prepend btn btn-outline-dark" %>
    <% end %>
  </div>
  <% @tweets.each do |tweet| %>
    <div class='pad-20-10 container bg-white mb-4 mt-2'>
      <div class='pt-2 pl-4 container pb-3'>
        <%= tweet.user.nickname %>
        <span class='ml-4'>「 <%= tweet.idea.genre.name %> 」</span>
      </div>
      <div class="list-group d-flex flex-row justify-content-center ">
        <%= link_to  tweet.idea.title , idea_tweet_path(tweet.idea, tweet.id), class: "list-group-item mt-2 text-dark shadow-sm w-100 " %>
      </div>
    </div>
  <% end %>
</div>
<%= render "shared/footer" %>