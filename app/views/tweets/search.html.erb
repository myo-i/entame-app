<%= render "shared/header" %>
<div class='bg-light pb-5 pt-2'>
  <div class="input-group d-flex justify-content-center">
    <%= form_with(url: search_idea_tweets_path, local: true, method: :get, class: "input-group w-50 mb-0") do |form| %>
      <%= form.text_field :keyword, placeholder: "タイトル名で検索する", class: "form-control" %>
      <%= form.submit "検索", class: "input-group-prepend btn btn-outline-dark" %>
    <% end %>
  </div>
  <% @tweets.each do |tweet| %>
    <div class="pb-3">
      <div class='pt-4 pl-4 mb-4 container '>
        <%= tweet.user.nickname %>
        <span class='ml-4'>＜<%= tweet.genre.name %>＞</span>
      </div>
      <div class="list-group bg-light d-flex flex-row justify-content-center ">
        <%= link_to  tweet.title , idea_tweet_path(tweet, tweet.id), class: "list-group-item mt-2 text-dark shadow-sm w-75 " %>
      </div>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>